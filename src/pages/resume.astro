<style>
	.page-header {
		text-align: center;
		margin-bottom: var(--spacing-3xl);
	}
	
	.page-header h1 {
		margin-bottom: var(--spacing-md);
	}
	
	.resume-content {
		max-width: 800px;
		margin: 0 auto;
	}
	
	.resume-actions {
		display: flex;
		gap: var(--spacing-lg);
		justify-content: center;
		margin-bottom: var(--spacing-3xl);
	}
	
	.resume-sections {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-3xl);
	}
	
	.resume-section h2 {
		color: var(--color-text-primary);
		margin-bottom: var(--spacing-xl);
		border-bottom: 2px solid var(--color-accent);
		padding-bottom: var(--spacing-sm);
	}
	
	.timeline {
		position: relative;
		padding-left: var(--spacing-lg);
	}
	
	.timeline::before {
		content: '';
		position: absolute;
		left: 0;
		top: 0;
		bottom: 0;
		width: 2px;
		background: var(--color-border);
	}
	
	.timeline-item {
		position: relative;
		margin-bottom: var(--spacing-2xl);
		padding-left: var(--spacing-xl);
	}
	
	.timeline-marker {
		position: absolute;
		left: -6px;
		top: 6px;
		width: 12px;
		height: 12px;
		border-radius: 50%;
		background: var(--color-accent);
		border: 3px solid var(--color-bg-primary);
	}
	
	.timeline-content h3 {
		color: var(--color-text-primary);
		margin-bottom: var(--spacing-xs);
	}
	
	.timeline-content h4 {
		color: var(--color-accent);
		font-weight: 500;
		margin-bottom: var(--spacing-sm);
	}
	
	.timeline-content p {
		margin-bottom: var(--spacing-md);
	}
	
	.timeline-content ul {
		padding-left: var(--spacing-lg);
	}
	
	.timeline-content li {
		margin-bottom: var(--spacing-xs);
		color: var(--color-text-secondary);
	}
	
	.education-item {
		padding: var(--spacing-xl);
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
	}
	
	.education-item h3 {
		color: var(--color-text-primary);
		margin-bottom: var(--spacing-xs);
	}
	
	.education-item h4 {
		color: var(--color-accent);
		font-weight: 500;
		margin-bottom: var(--spacing-sm);
	}
	
	.skills-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: var(--spacing-xl);
	}
	
	.skill-category {
		padding: var(--spacing-lg);
		background: var(--color-bg-secondary);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-lg);
	}
	
	.skill-category h3 {
		color: var(--color-text-primary);
		margin-bottom: var(--spacing-md);
		font-size: 1.125rem;
	}
	
	.skill-tags {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-sm);
	}
	
	.skill-tag {
		background: var(--color-bg-tertiary);
		color: var(--color-text-primary);
		padding: var(--spacing-xs) var(--spacing-sm);
		border-radius: var(--radius-sm);
		font-size: 0.875rem;
		font-weight: 500;
		border: 1px solid var(--color-border);
	}
	
	@media (max-width: 768px) {
		.resume-actions {
			flex-direction: column;
			align-items: center;
		}
		
		.resume-actions .btn {
			width: 100%;
			max-width: 250px;
		}
		
		.skills-grid {
			grid-template-columns: 1fr;
		}
		
		.timeline {
			padding-left: var(--spacing-md);
		}
		
		.timeline-item {
			padding-left: var(--spacing-lg);
		}
	}
</style>
