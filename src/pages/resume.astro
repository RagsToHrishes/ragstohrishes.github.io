<Layout title="Resume - Your Name" description="Download my resume and view my professional experience">
	<div class="page-header">
		<h1 class="text-gradient">Resume</h1>
	</div>
	
	<div class="resume-content">
		<div class="resume-actions">
			<a href="/resume.pdf" class="btn btn-primary" download>
				ðŸ“„ Download PDF
			</a>
			<a href="/contact" class="btn btn-secondary">
				ðŸ“§ Contact Me
			</a>
		</div>
		
		<div class="resume-sections">
			<section class="resume-section">
				<h2>Experience</h2>
				<div class="timeline">
					{experiences.map((experience) => (
						<div class="timeline-item">
							<div class="timeline-marker"></div>
							<div class="timeline-content">
								<div class="timeline-header">
									{experience.logo && (
										<img
											class="timeline-logo"
											src={experience.logo.src}
											alt={experience.logo.alt}
											loading="lazy"
											width="56"
											height="56"
										/>
									)}
									<div class="timeline-heading">
										<h3>{experience.title}</h3>
										<h4>{experience.organization} â€¢ {experience.period}</h4>
									</div>
								</div>
								<p>{experience.description}</p>
								{experience.bullets.length > 0 && (
									<ul>
										{experience.bullets.map((point) => (
											<li>{point}</li>
										))}
									</ul>
								)}
							</div>
						</div>
					))}
				</div>
			</section>


			<section class="resume-section">
				<h2>Education</h2>
				<div class="education-list">
					{education.map((entry) => (
						<div class="education-item">
							<div class="education-header">
								{entry.logo && (
									<img
										class="education-logo"
										src={entry.logo.src}
										alt={entry.logo.alt}
										loading="lazy"
										width="64"
										height="64"
									/>
								)}
								<div class="education-heading">
									<h3>{entry.degree}</h3>
									<h4>{entry.institution} â€¢ {entry.period}</h4>
								</div>
							</div>
							<p class="education-details">
								{entry.details.map((detail) => (
									<span class="education-detail">
										{detail.href ? (
											<a
												class="education-link"
												href={detail.href}
												target="_blank"
												rel="noreferrer noopener"
											>
												{detail.text}
											</a>
										) : (
											<span>{detail.text}</span>
										)}
									</span>
								))}
							</p>
						</div>
					))}
				</div>
			</section>
			
			<section class="resume-section">
				<h2>Teaching & Volunteering</h2>
