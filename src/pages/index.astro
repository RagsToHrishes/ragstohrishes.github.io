---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero';
import ResearchProject from '../components/ResearchProject';
---

<Layout title="Hrish Leen - Personal Portfolio" description="Personal website and portfolio showcasing research, skills, and experience" usePachinko={true}>
	<section class="landing-grid">
		<div class="hero-col grid-panel">
			<Hero client:load />
		</div>

		<div class="research-col grid-panel">
			<section class="featured-research">
				<div class="container">
					<div class="page-header">
						<h2 class="text-gradient">Featured Research</h2>
					</div>
					<div class="research-preview">
						<ResearchProject 
							client:load
							title="Machine Learning for Predictive Analytics"
							description="This research explores the application of deep learning techniques to predict complex patterns in large datasets. We developed a novel neural network architecture that achieves state-of-the-art performance on benchmark datasets while maintaining computational efficiency."
							links={{
								paper: "https://arxiv.org/abs/example",
								github: "https://github.com/yourusername/ml-predictive",
								demo: "https://demo.example.com",
								data: "https://dataset.example.com"
							}}
							tags={["Machine Learning", "Deep Learning", "Python", "TensorFlow", "Data Science"]}
						/>

						<div class="view-all-research">
							<a href="/research" class="btn btn-primary">View All Research Projects</a>
						</div>
					</div>
				</div>
			</section>
		</div>
	</section>
</Layout>

<style>
  .landing-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-xl);
    height: 60vh;
	
    background: transparent;
    align-items: stretch;
    margin-top: var(--spacing-2xl);

	width: 100vw;
    margin-left: calc(50% - 50vw);
    margin-right: calc(50% - 50vw);
  }

  /* Shared transparent background for both panels */
  .grid-panel {
    background: rgba(0, 0, 0, 0.2); /* 50% opaque */
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
    backdrop-filter: blur(6px);
    overflow: hidden;
  }

  .featured-research {
    background: transparent;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .featured-research .container {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .research-preview {
    flex: 1;
    overflow: auto;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .page-header h2 {
    margin-bottom: var(--spacing-md);
    color: #FFB366;
    font-weight: 900;
    text-shadow: 0 6px 12px rgba(0, 0, 0, 1), 0 0 20px rgba(255, 179, 102, 0.5);
  }

  .page-header p {
    color: #FFB366;
    font-weight: 600;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }

  .view-all-research {
    text-align: center;
    margin-top: var(--spacing-2xl);
  }

  @media (max-width: 1024px) {
    .landing-grid {
      grid-template-columns: 1fr;
      height: auto;
      min-height: 80vh;
    }
  }
</style>